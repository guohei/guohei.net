---
import ThemeIcon from '@components/ThemeIcon.astro'
import { useLocale } from '@utils/locale'
const { path } = useLocale(Astro.url)

export const prerender = true
---

<header class="py-8 border-b border-gray-200 dark:border-stone-700 mb-8">
    <div class="flex-between">
        <a href={path('/')} class="panda-link group">
            <i class="hidden">website header</i>
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-heading group-hover:text-primary transition-colors duration-300">果黑</h1>
        </a>
        <div class="flex items-center">
            <ThemeIcon />
        </div>
    </div>
</header>

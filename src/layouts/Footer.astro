---
import {useLocale} from '@utils/locale'
import {PandaConfig} from "../config.js";
const {start, footer} = PandaConfig;
const {t, path} = useLocale(Astro.url)
---

<footer class="mt-16 pt-8 border-t border-gray-200 dark:border-stone-700">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
        <div class="flex flex-wrap gap-4 items-center text-sm">
            {footer &&
                footer.map((item, index) => (
                    <a href={item.url} class="footer-link">
                        {t(item.titleKey)}
                    </a>
                ))
            }
        </div>
        <div class="text-sm text-secondary">
            <span>Â© {start}-{new Date().getFullYear()}</span>
        </div>
    </div>
</footer>
